{
  "name": "labx",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .tsx,.ts .",
    "test:dev": "jest --watch",
    "test:debug": "jest -o --watch --coverage=false",
    "test": "jest",
    "test:coverage": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "yarn test --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/react": "^16.9.49",
    "husky": "^4.3.0",
    "@labx/eslint-config": "*",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "repository": "git@github.com:odinlabx/labx.git",
  "author": "Bruno Felipe <bfaa1999@gmail.com>",
  "license": "MIT"
}
